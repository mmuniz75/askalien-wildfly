commands:
  01mount:
    command: "export AWS_ACCESS_KEY_ID= && export AWS_SECRET_ACCESS_KEY= && aws ec2 attach-volume --volume-id vol-0f78080111321f324 --instance-id $(curl -s http://169.254.169.254/latest/meta-data/instance-id) --device /dev/xvdf --region us-west-1"
    ignoreErrors: true
  02wait:
    command: "sleep 10"
  03mkdir:
    command: "mkdir /home/lucene"
    test: "[ ! -d /home/lucene ]"
  04mount:
    command: "mount /dev/xvdf /home/lucene"
    test: "[ ! -d /home/lucene ]"
  05grant:
    command: "sudo chmod -R o+rw /home/lucene"
